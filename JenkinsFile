pipeline {
  agent any

  environment {
    PROJECT_ID      = "bamboo-autumn-484913-i0"
    REGION          = "us-central1"
    AR_REPO         = "dataflow-repo"
    IMAGE_NAME      = "bq-dataflow"
    TEMPLATE_BUCKET = "interview-dataflow-templates"

    IMAGE_TAG     = "build-${env.BUILD_NUMBER}"
    IMAGE_URI     = "${REGION}-docker.pkg.dev/${PROJECT_ID}/${AR_REPO}/${IMAGE_NAME}:${IMAGE_TAG}"
    TEMPLATE_URI  = "gs://${TEMPLATE_BUCKET}/bq_to_bq_${IMAGE_TAG}.json"
  }

  stages {

    stage('Checkout') {
      steps {
        checkout scm
      }
    }

    stage('Set GCP Project') {
      steps {
        sh "gcloud config set project ${PROJECT_ID}"
      }
    }

    stage('Build Docker Image') {
      steps {
        sh """
          set -e
          docker build -t ${IMAGE_URI} dataflow
        """
      }
    }

    stage('Push to Artifact Registry') {
      steps {
        sh """
          set -e
          docker push ${IMAGE_URI}
        """
      }
    }

    stage('Build Dataflow Flex Template') {
      steps {
        sh """
          set -e
          gcloud dataflow flex-template build ${TEMPLATE_URI} \
            --image ${IMAGE_URI} \
            --sdk-language PYTHON \
            --metadata-file dataflow/metadata.json \
            --staging-location gs://${TEMPLATE_BUCKET}/staging \
            --temp-location gs://${TEMPLATE_BUCKET}/temp
        """
      }
    }
  }

  post {
    success {
      echo "✅ Docker Image: ${IMAGE_URI}"
      echo "✅ Flex Template: ${TEMPLATE_URI}"
    }
    failure {
      echo "❌ Pipeline failed."
    }
  }
}
